<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="digicom_pay" method="upgrade">

	<name>درگاه زرین پل - دی جی کام</name>
	<author>محمدحسین میری</author>
	<creationDate>26-07-2016</creationDate>
	<copyright>Copyright © 2013 themexpert.com All rights reserved.</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>miri.joomina@gmail.com</authorEmail>
	<authorUrl>www.joominamarket.com</authorUrl>
	<version>1.3.3</version>
	<description>پلاگین پرداخت زرین پل - دی جی کام</description>

	<files>
		<filename plugin="zarinpal">zarinpal.php</filename>
		<folder>zarinpal</folder>
	</files>

	<languages folder="language">
		<language tag="fa-IR">fa-IR/fa-IR.plg_digicom_zarinpal.ini</language>
	</languages>

 	<config>

		<fields name="params">

			<fieldset name="basic">

				<field name="merchant" type="text" default="" label="کد پذیرنده" description=""/>
				
				<field name="zaringate" type="radio" default="0" label="نوع درگاه" description="" class="btn-group btn-group-yesno">
				  <option value="1">زرین گیت</option>
				  <option value="0">عادی</option>
				</field>
				
				<field name="plugin_name" type="text" default="Zarinpal" label="نام پلاگین(لاتین)" description="" />

				<field name="plugin_hidname" type="hidden" default="zarinpal" />

			</fieldset>

		</fields>

	</config>

</extension>
